{
    "compilerOptions":{
        // ts compiler settings
        "strict":true,
        "jsx":"preserve",
        "jsxImportSource": "solid-js",
        "noEmit":true,

        // lib settings
        "lib":["dom","ESNext"],
        "target":"ESNext",
        "types": ["vite/client"],

        // module/import settings
        "esModuleInterop":true,
        "moduleResolution":"node",
        "module":"ESNext",
        "resolveJsonModule":true,
        "isolatedModules":true,
        "allowSyntheticDefaultImports": true,

        // pathing
        "baseUrl":".",
        "paths":{
            "components/*":["web/components/*"],
            "apis/*":["web/apis/*"],
            "hooks/*":["web/hooks/*"],
            "lib/*":["web/lib/*"],
            "store/*":["web/store/*"],
            "assets/*":["web/assets/*"],
            "pages/*":["web/pages/*"]
        }
    },

    "include":[
        "**/*.d.ts",
        "web/**/*.ts",
        "web/**/*.tsx"
    ],

    "exclude":[
        "node_modules"
    ]
}
